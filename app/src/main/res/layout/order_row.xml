<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_margin="5dp" android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customer_nameTV"
        android:text="Order From : "
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_dateTV"
        android:layout_below="@id/customer_nameTV"
        android:text="Order Date : "
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_statusTV"
        android:layout_below="@id/order_dateTV"
        android:text="Status : "
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="5dp"/>
    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="match_parent"
        android:layout_below="@id/order_statusTV"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/button_background"
        android:text="Show"
        android:textSize="18sp"
        android:textStyle="italic" />

</RelativeLayout>