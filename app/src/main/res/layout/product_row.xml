<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/emailLL"
        >
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:text="Offer By"
            android:textSize="20sp"
            android:layout_marginEnd="5dp"

            android:padding="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="User Email"
            android:textSize="20sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:id="@+id/user_emailTV"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bodyRL"
        android:layout_below="@id/emailLL"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleTV"
            android:textSize="20sp"
            android:text="Title"
            android:padding="5dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_holderTV"
            android:layout_toRightOf="@id/titleTV"
            android:text="Cow"
            android:textSize="20sp"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/priceTV"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Price (Rs)"
            android:padding="5dp"
            android:layout_toRightOf="@id/title_holderTV"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price_holderTV"
            android:textSize="20sp"
            android:text="Price"
            android:padding="5dp"
            android:layout_toRightOf="@id/priceTV"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionTV"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Description"
            android:layout_below="@id/titleTV"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description_holderTV"
            android:layout_below="@id/descriptionTV"
            android:text="Dummy"
            android:textSize="18sp"
            android:padding="5dp"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/image_holderIV"
            android:src="@drawable/tractor_icon"
            android:layout_below="@id/description_holderTV"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


</RelativeLayout>