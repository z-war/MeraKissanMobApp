<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="235dp"
    android:padding="10dp">
    <ImageView
        android:id="@+id/user_profile_picIV_header"
        android:layout_width="130dp"
        android:layout_height="110dp"

        android:background="@drawable/circle_image"
        android:src="@drawable/temp_profile_pic"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/user_nameTV_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_profile_picIV_header"
        android:gravity="left|center"
        android:text="dummy name "
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_emailTV_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_nameTV_header"
        android:text="dummy email"
        android:textSize="16sp" />

</RelativeLayout>